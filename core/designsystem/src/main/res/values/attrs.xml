<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTextView">
        <attr name="isTitle" format="boolean" />
        <attr name="textType" format="enum">
            <enum name="title1" value="0" />
            <enum name="title2" value="1" />
            <enum name="title3" value="2" />
            <enum name="subtitle1" value="3" />
            <enum name="subtitle2" value="4" />
            <enum name="body1" value="5" />
            <enum name="body2" value="6" />
        </attr>

        <attr name="textPriority" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
        </attr>
    </declare-styleable>

</resources>